@model KMWG_MVCApp.Models.AccountModel
@{
    ViewBag.Title = "Index";
}


<h3>Accounts</h3>


@using (Html.BeginForm("SaveAccount", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="box box-body">
    <div class="form-group">
        @Html.Label("lblName", "Name", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Name", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblCity", "City", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("City", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblDescription", "Description", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Description", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblEmail", "Email", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Email", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblFax", "Fax", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Fax", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblNumberofEmployees ", "NumberofEmployees ", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("NumberofEmployees", "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("lblTelephone", "Telephone", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Telephone", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblWebsiteurl", "Websiteurl", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Websiteurl", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="box box-footer">

        <div class="col-md-4">
            <button type="submit" class="btn btn-default">
                Gönder
            </button>
        </div>

    </div>

</div>
}
