@model IEnumerable<KMWG_MVCApp.DB.uzm_portaluser>

@{
    ViewBag.Title = "TumListe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All of Users</h2>

<p>
    @Html.ActionLink("Add New User", "Index")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.LogicalName)
        </th>*@

        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Birth Date")
        </th>
        <th>
            @Html.DisplayName("Weight")
        </th>
        <th>
            @Html.DisplayName("User Name")
        </th>
        <th>
            @Html.DisplayName("Password")
        </th>
        <th>
            @Html.DisplayName("Gender")
        </th>
        <th>
            @Html.DisplayName("Country")
        </th>
        <th>
            @Html.DisplayName("City")
        </th>
        <th>
            @Html.DisplayName("County")
        </th>
        <th>
            @Html.DisplayName("Company")
        </th>
        <th>
            @Html.DisplayName("Incident")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayName("Subject")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.LogicalName)
        </td>*@

        <td>
            @Html.DisplayFor(modelItem => item.uzm_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_bdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_weight)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.uzm_username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_iscinsiyet.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_iscountry.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.new_cityid.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.new_countyid.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_companyid.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_incidentid.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_categoryid.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uzm_subject)
        </td>
        <td>
            @Html.ActionLink("UpdateUser", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Show", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
        </td>
    </tr>
}

</table>
