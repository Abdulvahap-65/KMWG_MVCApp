@model KMWG_MVCApp.Models.CountryModel
@{
    ViewBag.Title = "Index";
}

<h2>Countries</h2>

@using (Html.BeginForm("SaveCountry", "Country", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="box box-body">
    <div class="form-group">
        @Html.Label("lblName", "Name", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Name", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblContinent", "Continent", new { @class = "control -label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Continent", " ", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("lblHemisphere", "Hemisphere", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Hemisphere", "", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("lblNationality", "Nationality", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Nationality", EnumHelper.GetSelectList(typeof(KMWG_MVCApp.Models.nationalityEnum)), ""+"Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblPhoneCode", "Phone Code", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("PhoneCode", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("lblPopulation", "Population ", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("Population", "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="box box-footer">

        <div class="col-md-4">
            <button type="submit" class="btn btn-default">
              Submit
            </button>
        </div>

    </div>

</div>
}
